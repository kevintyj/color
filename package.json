{
	"name": "@kevintyj/color",
	"type": "module",
	"version": "0.1.1",
	"author": "Kevin Taeyoon Jin <hello@kevintyj.com>",
	"license": "BSD-3-Clause",
	"private": false,
	"homepage": "https://github.com/kevintyj/color#readme",
	"repository": "github:kevintyj/color",
	"bugs": {
		"url": "https://github.com/kevintyj/color/issues"
	},
	"keywords": [
		"flex",
		"color",
		"accessibility"
	],
	"publishConfig": {
		"provenance": true
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs",
		"default": "./dist/index.js"
	},
	"scripts": {
		"watch": "tsup --watch",
		"build": "tsup",
		"build:css": "node --loader ts-node/esm scripts/generateCSS.ts",
		"prepare": "husky install",
		"lint:es": "eslint .",
		"clean": "git clean -fdX",
		"ci": "pnpm run lint:es && pnpm run build",
		"release": "pnpm run ci && changeset publish"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^1.1.0",
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@commitlint/cli": "^18.2.0",
		"@commitlint/config-conventional": "^18.1.0",
		"@types/node": "^20.10.3",
		"eslint": "^8.53.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"ts-node": "^10.9.2",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
